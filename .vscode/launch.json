  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "cargo": {
        "args": ["build", "--bin=adventofcode", "--package=adventofcode"],
        "filter": {
          "name": "adventofcode",
          "kind": "bin"
        }
      },
      "args": [
        "--year",
        "2022",
        "--day",
        "24",
        "--index",
        "2",
        "--input-file",
        "./src/year[:year]/data/day[:day]/input-test.txt",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole"
    }
  ]
}
